<div id="sidebar-wrapper-left" class="sidebar-wrapper sidebar-wrapper-left crayons-layout__sidebar-left crayons-layout__content">
  <aside class="side-bar" aria-label="Primary sidebar">
    <% cache(release_adjusted_cache_key("main-sidebar-nav--#{user_signed_in?}"), expires_in: 15.minutes) do %>
      <%= render partial: "shared/auth_widget", locals: { tracking_id: "ca_left_sidebar_home_page", source: "left_sidebar" } unless user_signed_in? %>
      <%= render partial: "layouts/main_nav", locals: { context: "sidebar" } %>
      <%= render "layouts/sidebar_tags" %>
    <% end %>
    <% cache("display-area-left-#{rand(5)}-#{user_signed_in?}", expires_in: 5.minutes) do %>
      <% @left_sidebar_ad = DisplayAd.for_display("sidebar_left", user_signed_in?) %>
      <% if @left_sidebar_ad %>
        <div class="crayons-card crayons-card--secondary crayons-sponsorship-widget" data-display-unit data-id="<%= @left_sidebar_ad.id %>">
          <div class="crayons-sponsorship__header relative">
            <button id="sponsorship-dropdown-trigger-<%= @left_sidebar_ad.id %>" aria-controls="sponsorship-dropdown-<%= @left_sidebar_ad.id %>" aria-expanded="false" aria-haspopup="true" 
                class="dropBtn crayons-sponsorship__dropdown crayons-btn crayons-btn--s crayons-btn--ghost crayons-btn--icon"
                aria-label="Sponsorship dropdown">
                <%= crayons_icon_tag("overflow-vertical", class: "pointer-events-none") %>
            </button>
            <div id="sponsorship-dropdown-<%= @left_sidebar_ad.id %>" class="crayons-dropdown right-0">
              <ul class="list-none m-0">
                <li>
                  <a
                    target="_blank"
                    class="crayons-link crayons-link--block"
                    rel="noopener"
                    href='/billboards'>
                    <%= crayons_icon_tag("info", aria_hidden: true, class: "c-btn__icon") %>
                    <%= I18n.t("display_ads.what_is_a_billboard") %>
                  </a>
                </li>
                <li>
                  <a
                    class="crayons-link crayons-link--block"
                    href='/settings/customization'>
                    <%= crayons_icon_tag("setting", aria_hidden: true, class: "c-btn__icon") %>
                    <%= I18n.t("display_ads.manage_preferences") %>
                  </a>
                </li>
              </ul>
            </div>
          </div>
          <div class="p-4 pt-0">
            <%= @left_sidebar_ad.processed_html.html_safe %>
          </div>
        </div>
      <% end %>
    <% end %>
    <% cache("display-area-left-2-#{rand(5)}-#{user_signed_in?}", expires_in: 5.minutes) do %>
      <% @second_left_sidebar_ad = DisplayAd.for_display("sidebar_left_2", user_signed_in?) %>
      <% if @second_left_sidebar_ad %>
        <div class="mt-4 crayons-card crayons-card--secondary crayons-sponsorship-widget" data-display-unit data-id="<%= @second_left_sidebar_ad.id %>">
          <div class="crayons-sponsorship__header relative">
            <button id="sponsorship-dropdown-trigger-<%= @second_left_sidebar_ad.id %>" aria-controls="sponsorship-dropdown-<%= @second_left_sidebar_ad.id %>" aria-expanded="false" aria-haspopup="true" 
                class="dropBtn crayons-sponsorship__dropdown crayons-btn crayons-btn--s crayons-btn--ghost crayons-btn--icon"
                aria-label="Sponsorship dropdown">
                <%= crayons_icon_tag("overflow-vertical", class: "pointer-events-none") %>
            </button>
            <div id="sponsorship-dropdown-<%= @second_left_sidebar_ad.id %>" class="crayons-dropdown right-0">
              <ul class="list-none m-0">
                <li>
                  <a
                    target="_blank"
                    class="crayons-link crayons-link--block"
                    rel="noopener"
                    href='/billboards'>
                    <%= crayons_icon_tag("info", aria_hidden: true, class: "c-btn__icon") %>
                    <%= I18n.t("display_ads.what_is_a_billboard") %>
                  </a>
                </li>
                <li>
                  <a
                    class="crayons-link crayons-link--block"
                    href='/settings/customization'>
                    <%= crayons_icon_tag("setting", aria_hidden: true, class: "c-btn__icon") %>
                    <%= I18n.t("display_ads.manage_preferences") %>
                  </a>
                </li>
              </ul>
            </div>
          </div>
          <div class="p-4 pt-0">
            <%= @second_left_sidebar_ad.processed_html.html_safe %>
          </div>
        </div>
      <% end %>
    <% end %>
  </aside>
</div>
