<%= javascript_include_tag "https://embed.runkit.com", defer: true %>

<div id="article-form"
  data-article="<%= article.to_json(only: %i[id title cached_tag_list published body_markdown main_image organization_id canonical_url updated_at], methods: %i[series all_series]) %>"
  data-organizations="<%= organizations&.to_json(only: %i[id name bg_color_hex text_color_hex], methods: [:profile_image_90]) %>"
  data-version="<%= version %>"
>
  <form class="crayons-article-form">

    <div class="crayons-article-form__header crayons-layout">
      <a href="/" class="crayons-article-form__logo" aria-label="<%= community_name %> Home"><%= logo_svg %></a>
      
      <div class="crayons-field__label">
        Write a new post
        <% if organizations && organizations.size > 0 %>
          <span>under:
            <select name="article[organization_id]" id="article_publish_under_org" class="crayons-select w-auto ml-2 mt-0">
              <%= options_for_select({ "None" => "" }.merge(organizations.pluck(:name, :id).to_h), article.organization_id || "") %>
            </select>
          </span>
        <% end %>
      </div>

      <div class="crayons-article-form__tabs ml-auto">
        <button class="crayons-btn crayons-btn--ghost current" type="button">Edit</button><button class="crayons-btn crayons-btn--ghost" type="button">Preview</button>
      </div>

      <div class="crayons-article-form__close">
        <a href="/" class="crayons-btn crayons-btn--ghost crayons-btn--icon">
          <%= inline_svg_tag("x.svg", aria: true, class: "crayons-icon", title: "Close") %>
        </a>
      </div>
    </div>

    <div class="crayons-layout crayons-layout--article-form">
      <div class="crayons-card crayons-layout__content crayons-article-form__fields">
        <% if version == "v2" %>
          <div>
            <div class="crayons-article-form__cover" role="presentation">
              <% if article.main_image.present? %>
                <div class="crayons-article-form__cover__image"><img src="<%= article.main_image %>"></div>
              <% end %>
              <button class="crayons-btn crayons-btn--outlined mr-2"><% if article.main_image.present? %>Change the cover<% else %>Add a cover photo<% end %><input type="file" accept="image/*" class="w-100 h-100 absolute left-0 right-0 top-0 bottom-0 overflow-hidden opacity-0 cursor-pointer" data-max-file-size-mb="25"></label>
            </div>
            <div class="crayons-article-form__title">
              <textarea class="crayons-textfield crayons-textfield--ghost fs-4xl l:fs-5xl fw-bold s:fw-heavy lh-tight" type="text" id="article-form-title" placeholder="New post title here..." autocomplete="off" style="height: 60px;"><%= article.title %></textarea>
            </div>
            <div class="crayons-article-form__tagsfield">
              <input type="text" class="crayons-textfield crayons-textfield--ghost ff-accent crayons-article-form__tags" placeholder="Add up to 4 tags (no special characters)..." name="tags" value="<%= article.cached_tag_list %>" />
            </div>
          </div>
        <% end %>
        <div class="crayons-article-form__body">
          <div class="crayons-article-form__toolbar opacity-0">
            <button class="crayons-btn crayons-btn--ghost crayons-btn--icon-left fw-normal" type="button">
              <%= inline_svg_tag("image.svg", aria: true, class: "crayons-icon", title: "Image") %>
              Upload image
              <input type="file" id="image-upload-field" class="w-100 h-100 absolute left-0 right-0 top-0 bottom-0 overflow-hidden opacity-0 cursor-pointer" multiple accept="image/*" data-max-file-size-mb="25" />
            </button>
          </div>
          <textarea class="crayons-textfield crayons-textfield--ghost fs-l ff-accent min-h-100" id="article_body_markdown" placeholder="Write your post content here..." name="body_markdown"><%= article.body_markdown %></textarea>
          </div>
      </div>
      <div class="crayons-layout__aside">
        <div class="crayons-article-form__tips">
          <h4 class="mb-2 fs-l">How to write a good post title?</h4>
          <ul class="list-disc pl-6 color-base-70">
            <li>Use <a href="#markdown">Markdown</a> markdown to write and format posts.</li>
            <li>Most of the time, you can write inline HTML directly into your posts.</li>
            <li>You can use <a href="#liquid">Liquid tags</a> to make add rich content such as tweets and videos.</li>
          </ul>
        </div>
      </div>
    </div>

    <div class="crayons-layout crayons-article-form__actions">
      <div class="crayons-layout crayons-article-form__actions__buttons">
        <button class="crayons-btn mr-2" type="button">Publish</button>
        <button class="crayons-btn crayons-btn--secondary mr-2" type="button">Save draft</button>
        <div class="relative">
          <button class="crayons-btn crayons-btn--ghost crayons-btn--icon" type="button">
            <%= inline_svg_tag("cog.svg", aria: true, class: "crayons-icon", title: "Options") %>
          </button>
        </div>
      </div>
    </div>
  </form>
</div>

<div class="hidden">
  <% if version == "v2" %>
    <%= render "pages/editor_markdown_help" %>
    <%= render "pages/editor_liquid_help" %>
  <% else %>
    <%= render "pages/editor_guide_text", version: "1" %>
  <% end %>
</div>

<style>
  body {
    padding-top: 0;
  }

  .crayons-article-form {
    display: flex;
    min-height: 100vh;
    flex-direction: column;
  }

  .crayons-layout--article-form {
    flex: 1;
  }

  body > footer,
  #top-bar {
    display: none
  }

  .universal-page-content-wrapper {
    overflow: unset;
  }
</style>
