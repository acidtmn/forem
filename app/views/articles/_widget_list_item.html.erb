<a class="crayons-link crayons-link--contentful" href="<%= plucked_article[0] %>">
  <%= plucked_article[1] %>
  <% if show_comment_count %>
    <div class="crayons-link__secondary">
      <% if plucked_article[2] > 0 %>
        <%= t("views.comments.plucked.count", count: plucked_article[2]) %>
      <% else %>
        <span class="crayons-indicator crayons-indicator--accent"><%= t("views.comments.plucked.empty") %></span>
      <% end %>
    </div>
  <% end %>
</a>
