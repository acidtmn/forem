<div class="ltag-gitlab-readme-tag">
  <div class="readme-overview">
    <h2>
      <img src="<%= ActionController::Base.helpers.asset_path("gitlab.svg") %>" alt="GitLab logo">
      <a href="<%= content.namespace.web_url %>">
        <%= content.namespace.name %>
      </a> / <a style="font-weight: 600;" href="<%= content.web_url %>">
        <%= content.name %>
      </a>
    </h2>
    <h3>
      <%= content.description %>
    </h3>
  </div>
  <% if show_readme %>
    <div class="ltag-gitlab-body">
      <p><%= (HTML_Truncator.truncate readme_html, 150).html_safe %></p>
    </div>
    <div class="gh-btn-container"><a class="gh-btn" href="<%= content.web_url %>">View on GitLub</a></div>
  <% end %>
</div>
