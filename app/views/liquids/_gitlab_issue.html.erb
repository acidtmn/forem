<div class="ltag_gitlab-liquid-tag">
  <h1>
    <a href="<%= date_link %>">
      <img class="gitlab-logo" alt="GitLab logo" src="<%= ActionController::Base.helpers.asset_path("gitlab.svg") %>">
      <span class="issue-title">
        <%= title %>
      </span>
      <span class="issue-number">#<%= issue_number %></span>
    </a>
  </h1>
  <div class="gitlab-thread">
    <div class="timeline-comment-header">
      <a href="<%= user_url %>">
        <img class="gitlab-liquid-tag-img" src="<%= user_avatar_url %>" alt="<%= username %> avatar">
      </a>
      <span class="arrow-left-outer"></span>
      <span class="arrow-left-inner"></span>
      <div class="timeline-comment-header-text">
        <strong>
          <a href="<%= user_url %>"><%= username %></a>
        </strong> commented on <a href="<%= date_link %>"><%= date %></a><span class="timestamp"></span>
      </div>
    </div>
    <div class="ltag-gitlab-body">
      <%= body %>
    </div>
    <div class="gh-btn-container"><a class="gh-btn" href="<%= date_link %>">View on GitLab</a></div>
  </div>
</div>
