<% if user.suspended? %>
    <%= render "admin/users/index/status_indicator", status: nil %>
<% elsif user.spam? %>
    <%= render "admin/users/index/status_indicator", status: nil %>
<% elsif user.warned? %>
    <%= render "admin/users/index/status_indicator", status: nil %>
<% elsif user.comment_suspended? %>
    <%= render "admin/users/index/status_indicator", status: nil %>
<% elsif user.limited? %>
    <%= render "admin/users/index/status_indicator", status: nil %>
<% elsif user.trusted? %>
    <%= render "admin/users/index/status_indicator", status: nil %>
<% else %>
    <%= render "admin/users/index/status_indicator", status: nil %>
<% end %>
