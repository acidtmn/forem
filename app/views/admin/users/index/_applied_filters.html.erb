<div role="group" aria-labelledby="applied-filters" class="flex flex-wrap gap-2">
    <h2 id="applied-filters" class="screen-reader-only">Applied filters</h2>
    <%  params[:roles]&.each do |role| %>
        <button
            aria-label="Remove filter: <%= role %>"
            class="c-pill c-pill--action-icon c-pill--action-icon--destructive"
            type="button">
            <%= role %>
            <%= crayons_icon_tag("x.svg", class: "c-pill__action-icon")%>
        </button>
    <% end %>
    <% if params[:roles] %>
        <button class="c-btn" aria-label="Clear all filters">Clear all</button>
    <% end %>
</div>