<nav class="flex mb-4" aria-label="Badge Category navigation">
  <%= form_tag(admin_badge_categories_path, method: "get") do %>
    <%= text_field_tag(:search, params[:search], autocomplete: "off", aria: { label: "Search" },
                                                 class: "top-bar--search-input crayons-textfield", placeholder: "Search by name") %>
  <% end %>
  <div class="ml-auto">
    <div class="justify-end">
      <%= link_to "Make A Badge Category", new_admin_badge_category_path, class: "crayons-btn" %>
    </div>
  </div>
</nav>

<%= paginate @badge_categories %>

<table class="crayons-table" width="100%">
  <thead>
    <tr>
      <th scope="col">Name</th>
      <th scope="col">Description</th>
      <th scope="col">Badges</th>
    </tr>
  </thead>
  <tbody class="crayons-card">
    <% @badge_categories.each do |category| %>
        <tr>
          <td><%= link_to category.name, edit_admin_badge_category_path(category) %></td>
          <td><%= category.description %></td>
          <td><%= category.badges_count %></td>
          <td><%= link_to "Edit", edit_admin_badge_category_path(category), class: "crayons-btn" %></td>
          <td><%= link_to "Destroy", admin_badge_category_path(category), class: "crayons-btn crayons-btn--danger", method: :delete, data: { confirm: "Are you sure?" } %></td>
        </tr>
    <% end %>
  </tbody>
</table>

<%= paginate @badge_categories %>
