<div class="comment-sort-option">
  <span class="sort-selected">
      <%= crayons_icon_tag(:checkmark, title: "Selected Sort Option") if show_selected %>
  </span>
  <span>
    <h4><%= sort_title %></h4>
    <a href="<%= @article.path %>?comments_sort=<%= sort_order %>" class="<%= html_classes if local_assigns[:html_classes] %>">
      <p>
        <%= sort_description %>
      </p>
    </a>
  </span>

</div>
