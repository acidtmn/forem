<li class="comment-sort-option">
  <a
    href="<%= @article.path %>?comments_sort=<%= sort_order %>"
    class="comment-sort-option__header <%= html_classes if local_assigns[:html_classes] %>"
    aria-describedby="<%= sort_order %>-description-text"
    aria-current="<%= "page" if show_selected %>">
    <%= crayons_icon_tag(:checkmark, title: "Selected Sort Option") if show_selected %>
    <%= sort_title %>
  </a>
  <div id="<%= sort_order %>-description-text" class="crayons-field__description">
    <%= sort_description %>
  </div>
</li>
