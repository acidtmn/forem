<div class="row">
  <div class="col-12">
    <h3><%= "Edit Badge #{@badge.id}" %></h3>
    <%= form_for [:internal, @badge], method: :patch do |form| %>
    <div class="form-group">
      <%= form.label :title %>
      <%= form.text_field :title, class: "form-control" %>
    </div>
    <hr>
    <div class="form-group">
      <%= form.label :slug, "Slug:" %>
      <%= form.text_field :slug, class: "form-control" %>
    </div>
    <hr>
    <div class="form-group">
      <%= form.label :description, "Description:" %>
      <%= form.text_field :description, class: "form-control" %>
    </div>
    <hr>
    <div class="form-group">
      <%= form.label :badge_image, "Badge Image:" %>
      <br>
      <img class="mx-auto mt-3" width="60" height="60" src="<%= @badge.badge_image %>" alt="badge image">
    </div>
    <hr>
      <%= form.submit "Update Badge", class: "btn btn-primary float-left" %>
    <% end %>
    <%= link_to "Back to All Badges", internal_badges_path, class: "btn btn-primary float-right" %>
  </div>
</div>
