<%= link_to "Back to All Page Redirects", internal_page_redirects_path, class: "btn btn-primary float-right" %>

<h2>Create a new Page Redirect</h2>

<%= form_with model: [:internal, @page_redirect], method: :post, local: true do |form| %>
  <div class="form-group">
    <%= form.label :old_path %>
    <%= form.text_field :old_path, class: "form-control", placeholder: "The old path (i.e. /username/old-path)" %>
  </div>
  <div class="form-group">
    <%= form.label :new_path %>
    <%= form.text_field :new_path, class: "form-control", placeholder: "The new path (i.e. /username/new-path)" %>
  </div>
  <%= form.submit "Create Page Redirect", class: "btn btn-primary" %>
<% end %>
